<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
	  <TargetFramework>net7.0-ios</TargetFramework>
	  <Version>1.0.2</Version>
	  <Nullable>enable</Nullable>
	  <ImplicitUsings>true</ImplicitUsings>
	  <PackageId>AvalonTM.MediaPlugin.iOS</PackageId>
	  <Title>Media Plugin for Avalonia, iOS</Title>
	  <Description>Take or pick photos and videos from a cross platform API.</Description>
	  <Copyright>Copyright 2023</Copyright>
	  <PackageProjectUrl>https://github.com/avalontm/Avalonia.MediaPlugin</PackageProjectUrl>
	  <RepositoryUrl>https://github.com/avalontm/Avalonia.MediaPlugin</RepositoryUrl>
	  <PackageIcon>mediaplugin_icon.png</PackageIcon>
	  <RepositoryType>git</RepositoryType>
	  <PackageTags>avalonia</PackageTags>
  </PropertyGroup>
  <ItemGroup>
    <None Include="..\..\..\Users\PC\Desktop\mediaplugin_icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
	
  <ItemGroup>
    <PackageReference Include="Avalonia.iOS" Version="11.0.3" />
    <PackageReference Include="Splat" Version="14.4.1" />
	  <PackageReference Include="AvalonTM.MediaPlugin" Version="1.0.0" />
	  <PackageReference Include="AvalonTM.Permissions.iOS" Version="1.0.0" />
  </ItemGroup>
	
	
</Project>
